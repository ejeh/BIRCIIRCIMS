<!-- views/verification.hbs -->

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Indigenous Certificate Verification</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='http://localhost:5000/images/benue-state-logo.png'
    />
    <style>
      .official-badge {
        background-color: #0056b3;
        color: white;
        font-weight: bold;
      }
      .certificate-card {
        border: 2px solid #0056b3;
        border-radius: 10px;
      }
      .watermark {
        opacity: 0.1;
        position: absolute;
        z-index: -1;
        font-size: 5rem;
        transform: rotate(-30deg);
      }
    </style>
  </head>
  <body>
    <div class='container py-5'>
      <div class='row justify-content-center'>
        <div class='col-md-8'>
          <div class='text-center mb-4'>
            <img
              src='http://localhost:5000/images/benue-state-logo.png'
              alt='Government Seal'
              class='mb-3'
              width='20%'
              height='15%'
            />
            <h1 class='display-5 fw-bold'>Indigenous Status Verification</h1>
            <p class='lead'>Official Government Verification Portal</p>
          </div>

          <div class='card certificate-card shadow-lg mb-4'>
            <div class='card-header official-badge'>
              <i class='bi bi-shield-check'></i>
              VERIFIED CERTIFICATE
            </div>
            <div class='card-body position-relative'>
              <div class='watermark'>VALID</div>
              <div class='row mb-3'>
                <div class='col-md-6'>
                  <h5 class='fw-bold'>Certificate ID:</h5>
                  <p class='text-muted'>{{certificate.certificateId}}</p>
                </div>
                <div class='col-md-6'>
                  <h5 class='fw-bold'>Issuing Authority:</h5>
                  <p class='text-muted'>{{certificate.issuingAuthority}}</p>
                </div>
              </div>

              <div class='row mb-3'>
                <div class='col-md-6'>
                  <h5 class='fw-bold'>Holder's Name:</h5>
                  <p class='text-muted'>{{certificate.firstname}}
                    {{certificate.lastname}}</p>
                </div>
                <div class='col-md-6'>
                  <h5 class='fw-bold'>Indigenous Group:</h5>
                  <p class='text-muted'>{{certificate.kindred}}</p>
                </div>
              </div>

              <div class='row'>
                <div class='col-md-6'>
                  <h5 class='fw-bold'>Date of Issuance:</h5>
                  <p class='text-muted'>{{certificate.dateOfIssuance}}</p>
                </div>
                <div class='col-md-6'>
                  <h5 class='fw-bold'>Verification Date:</h5>
                  <p class='text-muted' id='verificationDate'></p>
                </div>
              </div>
            </div>
            <div class='card-footer text-center'>
              <div class='d-flex justify-content-between align-items-center'>
                <small class='text-muted'>This is an official verification</small>
                <button
                  class='btn btn-sm btn-outline-primary'
                  onclick='window.print()'
                >
                  <i class='bi bi-printer'></i>
                  Print Verification
                </button>
              </div>
            </div>
          </div>

          <div class='alert alert-success'>
            <i class='bi bi-check-circle-fill'></i>
            This certificate has been successfully verified against the official
            government registry.
          </div>

          <div class='text-center mt-4'>
            <a href='/' class='btn btn-primary'>Verify Another Certificate</a>
          </div>
        </div>
      </div>
    </div>

    <script src='https://code.jquery.com/jquery-3.6.0.min.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'
    ></script>
    <script>
      $(document).ready(function() { // Set current verification date const now
      = new Date(); $('#verificationDate').text(now.toLocaleDateString() + ' ' +
      now.toLocaleTimeString()); // Disable right-click for security
      document.addEventListener('contextmenu', function(e) { e.preventDefault();
      }); });
    </script>
  </body>
</html>