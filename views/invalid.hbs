<!-- views/invalid.hbs -->

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Invalid Certificate</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css'
    />

    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='http://localhost:5000/images/benue-state-logo.png'
    />
  </head>
  <body>
    <div class='container py-5'>
      <div class='row justify-content-center'>
        <div class='col-md-8'>
          <div class='text-center mb-4'>
            <img
              src='http://localhost:5000/images/benue-state-logo.png'
              alt='Government Seal'
              class='mb-3 rounded-circle'
              width='20%'
              height='15%'
            />
            <h1 class='display-5 fw-bold'>Indigenous Status Verification</h1>
            <p class='lead'>Official Government Verification Portal</p>
          </div>

          <div class='card border-danger shadow-lg mb-4'>
            <div class='card-header bg-danger text-white'>
              <i class='bi bi-exclamation-triangle-fill'></i>
              VERIFICATION FAILED
            </div>
            <div class='card-body'>
              <div class='text-center py-4'>
                <i
                  class='bi bi-x-circle-fill text-danger'
                  style='font-size: 3rem;'
                ></i>
                <h3 class='mt-3'>{{message}}</h3>
                <p class='text-muted mt-2'>This certificate could not be
                  verified in our official records.</p>
              </div>
            </div>
            <div class='card-footer text-center'>
              <small class='text-muted'>If you believe this is an error, please
                contact the issuing authority.</small>
            </div>
          </div>

          <div class='alert alert-warning'>
            <i class='bi bi-info-circle-fill'></i>
            For security reasons, we recommend not accepting unverified
            certificates.
          </div>

          <div class='text-center mt-4'>
            <a href='/' class='btn btn-primary'>Try Another Verification</a>
          </div>
        </div>
      </div>
    </div>

    <script src='https://code.jquery.com/jquery-3.6.0.min.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'
    ></script>
  </body>
</html>